        <Label Content="Tasks" Foreground="White" FontSize="24" HorizontalAlignment="Left" Margin="46,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.421,-0.269" Width="238"/>
        <Label Content="Click to add more tasks" Foreground="White" FontSize="24" HorizontalAlignment="Left" Margin="292,581,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.421,-0.269" Width="270"/>
        <Image Source="pack://application:,,,/ManagmentManual;component/AddResourses/plus.png" HorizontalAlignment="Left" Height="38" Margin="244,581,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.266,0.716"/>
        <Image MouseDown="Image_MouseDown_1" Source="pack://application:,,,/ManagmentManual;component/AddResourses/save.png" HorizontalAlignment="Left" Height="84" Margin="1245,556,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="0.266,0.716"/>
        <Label Content="Total  0/100%" Foreground="White" FontSize="24" HorizontalAlignment="Left" Margin="802,581,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.421,-0.269" Width="238"/>
