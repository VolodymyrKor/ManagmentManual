<Page x:Class="ManagmentManual.Pages.ProjectCreatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:usercontrols="clr-namespace:ManagmentManual.UserControls"
      xmlns:local="clr-namespace:ManagmentManual.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1350 "
      Title="ProjectCreatingPage">
    <Page.Resources>
        <ImageBrush x:Key="backimg" 
                    Stretch="UniformToFill"
