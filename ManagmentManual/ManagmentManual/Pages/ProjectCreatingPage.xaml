    </Page.Resources>

    <Grid Background="{StaticResource ResourceKey=backimg}">
        <Image MouseDown="Image_MouseDown_2" Source="pack://application:,,,/ManagmentManual;component/AddResourses/return.png" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="53"/>
