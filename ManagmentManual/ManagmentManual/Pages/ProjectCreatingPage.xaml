                           />
        <Image MouseDown="Image_MouseDown" Source="pack://application:,,,/ManagmentManual;component/AddResourses/logout-xxl.png" HorizontalAlignment="Left" Height="48" Margin="1261,42,0,0"  VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.266,0.716"/>
        <Label Content="Add new project" Foreground="White" FontSize="24" HorizontalAlignment="Left" Margin="570,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.421,-0.269" Width="238"/>
        <Label Content="Project title" Foreground="White" FontSize="24" HorizontalAlignment="Left" Margin="46,146,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.421,-0.269" Width="238"/>
        <Label Content="Description" Foreground="White" FontSize="24" HorizontalAlignment="Left" Margin="46,193,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.421,-0.269" Width="238"/>
        <StackPanel HorizontalAlignment="Right" Width="956" Margin="0,0,150,74" >
