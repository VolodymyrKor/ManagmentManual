            <Label Background="#E5E4E2"  Content="Task description                                                     Time(%)  Priority(1-5)   Complexity(1-5)"  FontSize="24" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.421,-0.269" Width="956"/>
            <usercontrols:TaskAddingUserControl Margin="0,10,0,0" Height="80"/>
            <usercontrols:TaskAddingUserControl Margin="0,10,0,0" Height="80"/>
            <usercontrols:TaskAddingUserControl Margin="0,10,0,0" Height="80"/>
            
